@model IEnumerable<SkillUp.Models.TasksModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data=@item.Id data-target="#exampleModal">
                            Details
                        </button>
                    </td>
                </tr>
            }
        }
        @if (Model.Count() > 0)
        {
            @await Html.PartialAsync("_TasksDetailsPopup", Model.ToList()[0])
        }
    </tbody>
</table>