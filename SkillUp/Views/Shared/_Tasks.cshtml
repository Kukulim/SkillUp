@model IEnumerable<SkillUp.Models.TasksModel>

<div id="taskDetails" class="d-none">
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Task:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="TableTaskContent">
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" id="taskDetailsBtn" data=@item.Id data-toggle="modal" data-target="#exampleModal">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>